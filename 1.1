func searchPrimNum() ->[Int]{

var changeArray = [2,3]//定义可变数组

var isPrim = 0
print("质数是：")

for a in 4...10000{

    for b in 2..<a{

        if a%b==0{

            isPrim+=1

            break

        }

    }

    
    if isPrim==0{

        changeArray.append(a)

    }

    
    isPrim=0

}

return changeArray

}


